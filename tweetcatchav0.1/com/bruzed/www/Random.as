/*Random range generation code sourced from: http://entrance4.net/labs/?p=88*/package com.bruzed.www {	public class Random {		public static function range(minNum:Number, maxNum:Number, round:Boolean = true) {			if(minNum < 0) {				var posMin = (minNum*-1);				var range = posMin+maxNum;				if(round) { return Math.floor(Math.random() * (range - 1))-posMin; }				else { return Math.random() * (range - 1)-posMin; }				} else {				if(round) { return Math.floor(Math.random() * (maxNum - minNum + 1)) + minNum; }				else { return Math.random() * (maxNum - minNum + 1) + minNum; }			}		}	}}