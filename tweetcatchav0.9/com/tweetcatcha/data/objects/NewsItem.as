/*Class that defines a newsitems properties*/package com.tweetcatcha.data.objects {	import com.tweetcatcha.data.Constants;		public class NewsItem {				//properties		public var headline:String;		public var url:String;		public var section:String;		public var summary:String;		public var updatedTime:String;		public var createdTime:String;		public var pubDate:String;		public var byLine:String;		public var ID:int;		public var hour			:int = -1;		public var minute		:int = -1;		public var second		:int = -1;		public var month		:int = -1;		public var day			:int = -1;		public var year			:int = -1;				public var tweets		:Vector.<Tweet> = new Vector.<Tweet>();		public var totalTweets	:int = -1;				//constructor		public function NewsItem(									 headline:String, 									 url:String,									 section:String,									 summary:String,									 updatedTime:String,									 createdTime:String,									 pubDate:String,									 byLine:String,									 ID:int									 ) {			this.headline = headline;			this.url = url;			this.section = section;			this.summary = summary;			this.updatedTime = updatedTime;			this.createdTime = createdTime;			this.pubDate = pubDate;			this.byLine = byLine;			this.ID = ID;						_parseDate();		}				private function _parseDate():void {			var dateObj:Object = Constants.parseDate( createdTime );			hour = int(dateObj.hour);			minute = int(dateObj.minute);			second = int(dateObj.second);						month = int(dateObj.month);			day = int(dateObj.day);			year = int(dateObj.year);		}				public function addTweet( $t:Tweet ):void {			tweets.push( $t );			totalTweets = tweets.length;		}					}}